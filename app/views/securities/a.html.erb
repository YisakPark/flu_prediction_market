<% if user_signed_in? %>
<div class="modal fade" id="buy_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= t '.buy_shares' %></h4>
      </div>
      <div class="modal-body">
        <div id="modal_alert_buy">
          <p class="text-danger"><%= t '.empty_alert' %></p>
        </div>
        <div id="modal_normal_buy">
          <b><%= t '.you_have_selected' %></b>
          <div class="table-responsive" id="buy_share_table">
            <table class="table">
              <tr id="table_showing_highlighted_buy">
              </tr>
            </table>
          </div>
          <%= form_for(:security_order, url: create_order_path, html: {class: "form-inline"}) do |f| %>
            <div class="form-group" id="buy_order_form">
              <%= f.label :quantity, t('.quantity') %>
              <%= f.number_field :quantity, min: 0, max: 1000, step: 0.001, class: "form-control", id: "security_order_quantity_buy"%>
              <%= f.hidden_field(:order_type, value: "buy") %>
              <%= f.hidden_field(:number_of_security_to_buy, value: "", id: "number_of_security_to_buy") %>
            </div>

            <%= f.submit t('.submit'), class: "btn btn-default" %>
            <div id="cost_information_buy" class="text-center form-group"></div>
          <% end %>

	  <%= form_with(url: get_cost_path, html: {class: "sr-only", id: "hello"}) do |f| %>
	     <%= f.text_field :get_cost %>
	     <%= f.hidden_field(:hello, value: "hi") %>
          <% end %>
	  <button type="button" class="btn btn-default" id="hello_button">AA</button>
	  <div id="hello_div">dddd</div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" onclick="cancel_highlighted()"><%= t '.close' %></button>
      </div>
    </div>
  </div>
</div>
<% end %>
